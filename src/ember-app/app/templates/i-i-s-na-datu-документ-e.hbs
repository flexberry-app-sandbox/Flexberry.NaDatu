<h3 class="ui header">{{t "forms.i-i-s-na-datu-документ-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-na-datu-документ-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-na-datu-документ-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.тип
      class=(if (v-get validationModel "тип" "isInvalid") "error")
      label=(t "forms.i-i-s-na-datu-документ-e.тип-caption")
      data-test-i-i-s-na-datu-документ-e-тип=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тип" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фамилия
      class=(if (v-get validationModel "фамилия" "isInvalid") "error")
      label=(t "forms.i-i-s-na-datu-документ-e.фамилия-caption")
      data-test-i-i-s-na-datu-документ-e-фамилия=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фамилия" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-na-datu-документ-e.ответственный-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.ответственный
      displayAttributeName="фамилияИ"
      autocomplete=true
      relationName="ответственный"
      projection="ОтветственныйL"
      title=(t "forms.i-i-s-na-datu-документ-e.ответственный-caption")
      readonly=readonly
      componentName="ответственныйLookup"
      class=(if (v-get validationModel "ответственный" "isInvalid") "error")
      data-test-i-i-s-na-datu-документ-e-ответственный=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ответственный" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.ответственный.должность
      class=(if (v-get validationModel.ответственный "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-na-datu-документ-e.ответственный.должность-caption")
      data-test-i-i-s-na-datu-документ-e-ответственный-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.ответственный "должность" "message")}}
  </div>
</form>
